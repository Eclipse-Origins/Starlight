<Project>
    <Grid>
        <Grid.ColumnsProportions>
            <Proportion Type="Part" />
            <Proportion Type="Auto" />
            <Proportion Type="Part" />
        </Grid.ColumnsProportions>
        <Grid.RowsProportions>
            <Proportion Type="Part" />
            <Proportion Type="Auto" />
            <Proportion Type="Part" />
        </Grid.RowsProportions>

        <Grid GridColumn="1" GridRow="1">
            <Grid.RowsProportions>
                <Proportion Type="Auto" />
                <Proportion Type="Part" />
            </Grid.RowsProportions>

            <Grid>
                <Grid.ColumnsProportions>
                    <Proportion Type="Auto" />
                    <Proportion Type="Auto" />
                </Grid.ColumnsProportions>

                <TextButton Id="LoginCommandButton" Text="Login" Padding="5" />
                <TextButton GridColumn="1" Id="RegisterCommandButton" Text="Register" Padding="5" />
            </Grid>

            <Grid GridRow="1" Width="300" Height="200" Background="Gray">

                <Grid Visible="true" Id="LoginPanel" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <Grid.RowsProportions>
                        <Proportion Type="Auto" />
                        <Proportion Type="Auto" />
                        <Proportion Type="Auto" />
                        <Proportion Type="Auto" />
                        <Proportion Type="Auto" />
                    </Grid.RowsProportions>

                    <Label HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="Username" TextAlign="Center" />
                    <TextBox GridRow="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,0" />
                    <Label GridRow="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="Password" TextAlign="Center" />
                    <TextBox GridRow="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" PasswordField="true" Margin="5,0" />

                    <TextButton Id="loginButton" GridRow="4" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5,2" Text="Login" />
                </Grid>

                <Grid Visible="false" Id="RegisterPanel" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <Grid.RowsProportions>
                        <Proportion Type="Auto" />
                        <Proportion Type="Auto" />
                    </Grid.RowsProportions>

                    <Label HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="Username" TextAlign="Center" />
                    <TextBox GridRow="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,0" />
                </Grid>
                
            </Grid>
        </Grid>
    </Grid>
</Project>